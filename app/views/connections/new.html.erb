<%# Name, Hostname, Port, Password %>

<%= form_with scope: :connection, url: connections_path, local: true do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :hostname %>
    <%= form.text_field :hostname %>
  </p>

  <p>
    <%= form.label :port %>
    <%= form.text_field :port %>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.text_field :password %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', connections_path %>